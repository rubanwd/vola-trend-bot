RELAX_MODE=normal
# CONFIRM_MODE управляет тем, сколько индикаторов должны подтвердить: auto | all | any | two_of_three
CONFIRM_MODE=two_of_three

# UNIVERSE SIZE
TOP_N_BY_VOL=100

# SCHEDULING
ITER_SECONDS=1800

