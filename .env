# EXCHANGE / MARKET
EXCHANGE=bybit
MARKET_TYPE=swap
QUOTE=USDT

# TIMEFRAMES
WORK_TF=4h
VOL_TF=1d

# INDICATORS (lengths/thresholds)
RSI_LEN=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
RSI_RELAXED_OVERBOUGHT=65
RSI_RELAXED_OVERSOLD=35
EMA_FAST=50
EMA_SLOW=200
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# ENABLE/DISABLE indicators
ENABLE_RSI=true
ENABLE_EMA=true
ENABLE_MACD=true

# STRICTNESS / CONFIRMATION
